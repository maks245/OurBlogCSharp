@model IEnumerable<TestWebApp.Models.Book>

@{
    ViewData["Title"] = "BookList";
}

<h1>BookList</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">>Create New</a> @* class="btn btn-danger" *@
</p>

<table class="table table-bordered table-striped table-danger">
    @* // *@
     <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
